<Window x:Class="wpfEDRO.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfEDRO"
        mc:Ignorable="d"
        Title="CalendarWindow" Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Calendar x:Name="calendarDatePicker" Margin="10, 10, 10, 10" Grid.Column="1" Grid.Row="1" DisplayDateChanged="calendarDatePicker_DisplayDateChanged"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Update Journal Cutoff" Click="Button_Click" />
    </Grid>
</Window>